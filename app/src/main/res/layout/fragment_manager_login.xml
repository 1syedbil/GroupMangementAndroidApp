<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.ManagerLogin">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/userLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="320dp"
        android:gravity="bottom"
        android:text="Username :"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/passLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="362dp"
        android:gravity="bottom"
        android:text="Password  :"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="180dp"
        android:layout_marginVertical="300dp"
        android:labelFor="@+id/userLabel"
        android:autofillHints="username" />

    <EditText
        android:id="@+id/password"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="180dp"
        android:layout_marginVertical="355dp"
        android:labelFor="@+id/userLabel"
        android:autofillHints="username" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="65dp"
        android:text="Log In"
        android:textSize="15sp"/>

</FrameLayout>