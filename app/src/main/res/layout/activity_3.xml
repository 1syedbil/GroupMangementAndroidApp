<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/backButton"
        android:layout_width="113dp"
        android:layout_height="41dp"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Back" />

    <TextView
        android:id="@+id/title"
        android:layout_width="199dp"
        android:layout_height="34dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="222dp"
        android:gravity="start"
        android:text="Current Tasks"
        android:textAllCaps="true"
        android:textColor="@color/teal_700"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/employeeSelectLabel"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:gravity="start"
        android:text="Select Employee:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/employeeSelect"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginStart="170dp"/>

    <ListView
        android:id="@+id/employee1TaskList"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/employee2TaskList"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/employee3TaskList"
        android:layout_width="match_parent"
        android:layout_height="808dp"
        android:layout_row="2"
        android:layout_column="0" />

    <Button
        android:id="@+id/exportTaskListButton"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="end"
        android:text="EXPORT TASKLIST" />

</GridLayout>